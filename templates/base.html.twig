<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar bg-primary" data-bs-theme="dark">
            <div class="container-fluid d-flex justify-content-center align-items-center gap-3">
                
                <!-- Titre centré -->
                <a class="navbar-brand m-0" href="/home">Shop Periph PC</a>

                <!-- Liens de navigation -->
                <div class="navbar-nav d-flex flex-row gap-3 ">
                    <a class="nav-link" href="{{ url('home') }}">Accueil</a>
                    
                    {% for categorie in categories %}
                        <a class="nav-link" href="{{ path('category', { id: categorie.id }) }}">
                            {{ categorie.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    <footer class="mt-auto">
        <div class="container-fluid bg-primary text-white pt-3 text-center" data-bs-theme="dark">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <h5>Shop Periph PC</h5>

                    </div>
                    <div class="col-3">
                        <h5>Catégories</h5>
                        <ul class="nav flex-column">
                        {% for categorie in categories %}
                            <li>
                                <a href="category/{{ categorie.getId() }}" class="nav-link">{{ categorie.getName() }}</a>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                    <div class="col-3">
                        <h5>Liens utiles</h5>
                        <ul class="nav flex-column">
                            <li>
                                <a href="#" class="nav-link">Compte</a>
                            </li>
                            <li>
                                <a href="#" class="nav-link">Connexion</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    </body>
</html>
